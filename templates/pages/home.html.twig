{% extends 'base.html.twig' %}

{% block title "Amaubilier" %}

{% block body %}

    <div class="jumbotron text-center">
        <div class="container">
            <h1>Amaubilier</h1>
            <p>Votre numéro 1 en immobilier sur Paris</p>
        </div>
    </div>

    <div class="container">
        <h2>Les derniers biens</h2>
        <div class="row flex">
        {% for property in properties %}
            <div class="col-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('property.show', { id: property.id, slug: property.slug }) }}">{{ property.title }}</a>
                        </h5>
                        <p class="card-text">{{ property.city }} ({{ property.postalCode }})<p>
                        <div class="text-primary" style="font-weight: bold;font-size: 2rem">{{ property.FormattedPrice }} € </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
    
    <!-- pour créer branche dédiée au mode développement -->
{% endblock %}
